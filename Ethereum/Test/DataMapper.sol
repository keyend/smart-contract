        Item[] _values;
        mapping (uint => uint) _indexes;
    }

    function contains(Set storage items, uint _id) internal view returns (bool) {
        return items._indexes[_id] != 0;
    }

    function get(Set storage items, uint _id) internal view returns (Item memory fields) {
        if (contains(items, _id)) {
            uint _length = items._values.length;
            for (uint i = 0; i < _length; i++) {
                if (items._values[i].id == _id) {
                    fields = items._values[i];
                }
            }
        }
        return fields;
    }

    function add(Set storage items, Item memory value) internal returns (bool) {
        if (contains(items, value.id)) {
            if (!remove(items, value)) {
                return false;
            }
        }

        items._values.push(value);
        items._indexes[value.id] = items._values.length;

        return true;
    }

    function remove(Set storage items, Item memory value) internal returns (bool) {
        uint256 valueIndex = items._indexes[value.id];

        if (valueIndex != 0) {
            uint256 _index = valueIndex - 1;
            uint256 _lastIndex = items._values.length - 1;
            Item memory _lastvalue = items._values[_lastIndex];

            items._values[_index] = _lastvalue;
            items._indexes[_lastvalue.id] = _index + 1;

            items._values.pop();
            delete items._indexes[value.id];

            return true;
        } else {
            return false;
        }
    }
}

